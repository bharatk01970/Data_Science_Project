def combine_selected_keys(self, field_expansions, combine_info):
    import itertools
    keys = combine_info['keys']
    char_limits = combine_info['char_limits']
    new_col = combine_info['new_col']
    key_value_lists = []

    for key in keys:
        vals = field_expansions.get(key, [""])
        limit = char_limits.get(key, '*')
        if limit != '*':
            try:
                limit_int = int(limit)
                # Truncate each value to limit before combination
                vals = [v[:limit_int] if v else "" for v in vals]
            except Exception:
                pass
        key_value_lists.append(vals)

    combined_values = []
    # Combine truncated values via Cartesian product
    for combo in itertools.product(*key_value_lists):
        combined_values.append("".join(combo))

    return new_col, combined_values